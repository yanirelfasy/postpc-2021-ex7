<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exercise.android.sandwich">

    <application
        android:name=".SandwichApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Sandwich"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyApplication">
        <activity android:name=".OrderIsReady"></activity>
        <activity android:name=".OrderInProgress" />
        <activity android:name=".EditOrder" />
        <activity android:name=".PlaceOrder" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>